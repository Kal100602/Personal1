	public static void main(String[] args) {
		int typeOfTravel;
		
		display();
		typeOfTravel = Integer.parseInt(input.nextLine());
		while(typeOfTravel != 1 && typeOfTravel != 2) {
			System.out.println("Invalid, please input again.");
			typeOfTravel = Integer.parseInt(input.nextLine());
		}
		boolean travelBool;
		if (typeOfTravel == 1) {
			travelBool = true;
			phase1(travelBool);
		} else 
		if (typeOfTravel == 2) {
			travelBool = false;
			phase1(travelBool);
		}
	}
